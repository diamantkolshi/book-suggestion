<br><br>
<div class="container">
	<%= form_tag(ks_platform_index_path, :method => "get") do %>
		<div class="input-group col-md-8" style="margin-left: 180px;">
   	<%= text_field_tag :search, params[:search], placeholder: "Kerko libra ....", class: "form-control input-lg", requred: true  %>
		<span class="input-group-btn">
			<%= button_tag class: "btn btn-info btn-lg" do %>
				<i class="glyphicon glyphicon-search"></i>
			<% end %>
		</span>

	</div>
		<% end %>

	<div class="col-lg-12">
		<h4 class="page-header"><%= "Te gjitha librat".upcase %></h4>
	</div>


	<div class="col-md-8">
		<%= render "products" %>    
	</div>

	<div class="col-md-3">
	    <div class="well">
	        <h4>Categories</h4>
	        <div class="row">
	            <div class="col-lg-10">
	                <ul class="list-unstyled">
	                  <% @categories.each do |category| %>
	                    <li>
	                    	<%= link_to category.name, ks_platform_index_path(cat: category.name) %>
	                    </li>
	                  <% end %>
	                </ul>
	            </div>
	          </div>
	    </div>
	</div>

</div>