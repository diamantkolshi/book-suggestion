        <!-- Header Stat Banner -->
    <header id="banner" class="stat_bann">
        <div class="bannr_sec">
            <%= image_tag 'books.jpg' %>
            <h1 class="main_titl">
                Best Real Estate Deals site
            </h1>
            <h4 class="sub_titl">
                Wes Anderson American Apparel
            </h4>
        </div>
    </header>

    <section id="srch_slide">

        <div class="container">

            <!-- Search & Slider -->
            <div class="row">
                <!-- Search Form -->
                <div class="col-md-4">
                    <div class="srch_frm"  style="width: 800px;margin-left: 160px;">
                        <%= form_tag(al_platform_search_path, :method => "get") do %>
                            <div class="control-group form-group col-md-6">
                                <div class="controls">
                                    <%= text_field_tag :search, params[:search], placeholder: "Kerko libra ....", class: "form-control input-lg", requred: true  %>
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group col-md-4">
                                <div class="controls">
                                    <%= select_tag :county, options_for_select(@cities), class: "form-control", :include_blank => "Zgjedh lokacionin" %>
                                    </div>
                            </div>

                            <div id="success" class="col-md-2"></div>
                            <!-- For success/fail messages -->
                            <%= button_tag class: "btn btn-primary", style: "margin-top: -1px;" do %>
                                <i class="glyphicon glyphicon-search"></i> SEARCH
							<% end %>
                        <% end %>
                    </div>
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

    </section>
    
    <div class="spacer-60"></div>

    <%= render "products" %> 
    
    <div class="container">
        <div class="prop_addinfo">
            <h2 class="add_titl">
                Kategorite
            </h2>
            <div class="info_sec first">
                <% @categories.each do |category| %>
                    <div class="col-md-4">
                        <%= link_to al_platform_search_path(cat: category.name) do %>
                            <i class="fa fa-long-arrow-right"></i>
                            <p class="infos"> <%= category.name %> <span> (<%= category.items.where(country_id: 2).length %>) </span> </p>
                        <% end %>
                    </div>
                <% end %>                  
            </div>
        </div>
    </div>









