<div class="col-md-4"></div>
<div class="col-md-4" style="border: 2px solid #b0a084;padding: 25px;">
	<% if flash[:danger].present? %>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-6 text-mutted m-b">
      <% flash[:danger].each do |colmun, message| %>
        <p style="color: red"><%= colmun %>: <%= message[0] %></p>
      <% end %>
    </div>
  </div><br>
  <% end %>

  <% if flash[:success].present? %>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-6 text-mutted m-b">
      <%= flash[:success] %>
    </div>
  </div><br>
  <% end %>
 <%= form_for @items, url: { controller: "items", action: "create" } do |f| %>
	<div class="form-group row">
	  <div class="col-xs-12">
	    <%= f.text_field :name, placeholder: "Emri*", class: 'form-control', required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
			<%= f.text_field :email, placeholder: "Email", class: 'form-control' %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	    <%= f.collection_select :country_id, Country.all, :id, :name, {prompt: "Zgjidh Vendin*"}, {class: "form-control", :required => true}%>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	    <%= f.select :location, ["Pr","Pz","Fr"], {prompt: "Zgjidh locacionin*"}, { class: "form-control", require: true } %>
	    <%# f.text_field :location, placeholder: "lokcaioni*", class: 'form-control', required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Zgjidh kategorine e librave*"}, {class: "form-control", :required => true}%>
	  </div>
	</div>	
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :address, placeholder: "Adresa*", class: 'form-control', required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :phone, placeholder: "Telefoni*", class: 'form-control', required: true %>
	  </div>
	</div>
	
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :title, placeholder: "Titulli i shpalljes*", class: 'form-control', required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :description, placeholder: "Permbajtja*", class: 'form-control', required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :price, class: 'form-control', placeholder: "Cmimi*", required: true %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.file_field :avatar, class: 'form-control' %>
	  </div>
	</div>
	<div class="form-group row">
	  <div class="col-xs-12">
	  	<%= f.text_field :code, class: 'form-control', placeholder: "Shkruj kodin*", required: true, style: "" %>
	  </div>
	</div>
  <% if flash[:error].present? %>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-6 text-mutted m-b">
      <%= flash[:error] %>
    </div>
  </div><br>
  <% end %>
	<div class="form-group row">
	  <div class="col-xs-3"></div>
	  <div class="col-xs-6">
	    <%= f.submit :Regjistro, class: "form-control", label: false %>
	  </div>
	</div>
<% end %>
</div>
